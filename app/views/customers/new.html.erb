<% content_for :title, "New customer" %>

<h1>New customer</h1>

<%= form_with model: @customer, data: { controller: 'payment-form' },local: true do |f| %>
  <%= user_facing_errors @customer %>

  <%= render "form", f: f %>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to customers", customers_path %>
</div>
